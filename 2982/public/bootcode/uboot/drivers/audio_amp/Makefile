include $(TOPDIR)/config.mk

LIB 	:= $(obj)libaudio_amp.o

ifeq ($(CONFIG_REALTEK_AMP_TAS5707), y)
	COBJS-$(CONFIG_REALTEK_AMP_TAS5707)     += TAS5707/AudioAmp.o
else
ifeq ($(CONFIG_REALTEK_AMP_TAS5707_TV013), y)
	COBJS-$(CONFIG_REALTEK_AMP_TAS5707_TV013)     += TAS5707_tv013/AudioAmp.o
else

	ifeq ($(CONFIG_REALTEK_AMP_TAS5727), y)
		COBJS-$(CONFIG_REALTEK_AMP_TAS5727)     += TAS5727/AudioAmp.o
	else
 		ifeq ($(CONFIG_REALTEK_AMP_TAS5711), y)
			COBJS-$(CONFIG_REALTEK_AMP_TAS5711)     += TAS5711/AudioAmp.o
		else
 			ifeq ($(CONFIG_REALTEK_AMP_TAS5721), y)
				COBJS-$(CONFIG_REALTEK_AMP_TAS5721)     += TAS5721/AudioAmp.o
			else
 				ifeq ($(CONFIG_REALTEK_AMP_BM5449MWV), y)
					COBJS-$(CONFIG_REALTEK_AMP_BM5449MWV)     += BM5449MWV/AudioAmp.o
				else
					ifeq ($(CONFIG_REALTEK_AMP_AD83586), y)
						COBJS-$(CONFIG_REALTEK_AMP_AD83586)     += AD83586/AudioAmp.o
					else
						COBJS-$(CONFIG_REALTEK_AMP_AD83586)     += 
					endif	
				endif			
			endif
		endif
	endif
endif
endif

COBJS	:= $(COBJS-y)
SRCS 	:= $(COBJS:.o=.c)
OBJS 	:= $(addprefix $(obj),$(COBJS))

all:	$(LIB)

$(LIB):	$(obj).depend $(OBJS)
	$(call cmd_link_o_target, $(OBJS))


#########################################################################

# defines $(obj).depend target
include $(SRCTREE)/rules.mk

sinclude $(obj).depend

########################################################################
